<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvDefCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="1"
            android:paddingEnd="10dp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tvDefinition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A safe and guaranteed place of storage for and retrieval of important items or goods."
            android:paddingEnd="20dp"
            android:textColor="@color/black"
            android:textSize="18sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvExample"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Example: If you want to buy a bicycle, you need to put the money in your piggy bank."
        android:paddingStart="10dp"
        android:textStyle="italic"/>

</LinearLayout>