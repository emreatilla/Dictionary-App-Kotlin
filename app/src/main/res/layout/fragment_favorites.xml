<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".view.fragments.FavoritesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_red_bg">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorites"
            android:gravity="center"
            android:textSize="40sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/background_green">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_favorites_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rv_tail"
            android:paddingHorizontal="16dp"
            tools:listitem="@layout/history_design"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_blank_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="There are no words saved yet ..."
        android:textStyle="italic"
        android:layout_gravity="center"
        android:gravity="center"/>

</LinearLayout>